// instalacja test-driven development

// Karma : https://github.com/karma-runner/karma
// Środowisko do uruchamiania testów
npm install karma --save-dev
npm install grunt-karma --save-dev
npm install karma-cli --save-dev

// Jasmine : framework służący do pisania testów jednostkowych
npm install karma-jasmine --save-dev

// biblioteka Jamine - trzeba inststalować osobno
npm install jasmine-core --save-dev

// Uruchamianie testow jednostkowych w chmorze
// opis: https://www.npmjs.com/package/karma-sauce-launcher
npm install karma-sauce-launcher --save-dev

// Wyjścia dla opisów testów (styl BDD)
npm install karma-story-reporter --save-dev

// wywoływanie zapytań URL
npm install karma-script-launcher --save-dev

// silnik dla testów na PhantomJS (przeglądarka na silniku WebKit)
npm install karma-phantomjs-launcher --save-dev

// silnik dla testów na Google Chrome i Google Chrome Canary
npm install karma-chrome-launcher --save-dev

// silnik dla testów na Mozilla Firefox
npm install karma-firefox-launcher --save-dev

// silnik dla testów na  Internet Explorer
npm install karma-ie-launcher --save-dev

// Karma raportowanie w przeglądarce
npm install karma-browser-reporter --save-dev

